@model StudentManagementSystem.Areas.User.Models.UserRegisterViewModel
<div class=" = col-lg-4 mx-auto">
    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
        <h4>Kayıt Sayfası</h4>
        <form class="pt-3" method="post">
            <div class="form-group">
                <label>Kullanıcı Adınız</label>
              @*eğer kullanıcı kısmını boş bırakırsa required kısmı devreye girecek.*@
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input type="text" asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Şifre</label>
                @*eğer kullanıcı kısmını boş bırakırsa required kısmı devreye girecek.*@
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="text" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label>Şifre Tekrar</label>
                @*eğer kullanıcı kısmını boş bırakırsa required kısmı devreye girecek.*@
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <input type="text" asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label>Mail Adresi</label>
                @*eğer kullanıcı kısmını boş bırakırsa required kısmı devreye girecek.*@
                <span asp-validation-for="Mail" class="text-danger"></span>
                <input type="text" asp-for="Mail" class="form-control" />
            </div>
            
            <button type="submit" class="btn btn-primary mr-2">Kayıt Ol</button>
        </form>
    </div>
</div>
