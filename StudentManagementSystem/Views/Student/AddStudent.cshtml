@model EntityLayer.Concrete.StudentInfo

@*Html.BeginForm 3 tane paranetre alır : 1.si Action'ın ismi, 2.si conroller'ın ismi, 3.sü form methodun türü*@
@using (Html.BeginForm("AddStudent", "Student", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Öğrenci Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>TC</label>
                        <input type="text" class="form-control" name="TC">
                    </div>
                    <div class="form-group">
                        <label>Ad</label>
                        <input type="text" class="form-control" name="StdName">
                    </div>
                    <div class="form-group">
                        <label>Soyad</label>
                        <input type="text" class="form-control" name="StdSurname">
                    </div>
                    <div class="form-group">
                        <label>Numara</label>
                        <input type="text" class="form-control" name="StdNum">
                    </div>
                    <div class="form-group">
                        <label>Sınıf</label>
                        <textarea class="form-control" name="StdClass"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Dğum Tarihi</label>
                        <textarea class="form-control" name="StdBirthDay"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        <textarea class="form-control" name="Phone"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        <textarea class="form-control" name="Mail" ></textarea>
                    </div>
                    <div class="form-group">
                        <label>Adres</label>
                        <textarea class="form-control" name="Address"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Devamsızlık Sayısı</label>
                        <textarea class="form-control" name="AbsentDay"></textarea>
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                  
                </form>
            </div>
        </div>
    </div>

}
